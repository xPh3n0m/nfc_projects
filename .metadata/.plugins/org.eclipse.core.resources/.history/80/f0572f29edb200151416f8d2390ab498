package application.model;

import java.sql.SQLException;

import javax.smartcardio.ATR;
import javax.smartcardio.Card;

import org.json.simple.JSONObject;
import org.json.simple.parser.JSONParser;
import org.json.simple.parser.ParseException;

public class NFCWristband {
	
	private Card card;
	private int wid;
	private ATR atr;
	private String data;
	private double balance;
	private char status;
	
	public NFCWristband(Card card, ATR atr) {
		this.card = card;
		this.atr = atr;
		this.data = null;
	}
	
	public NFCWristband(Card card, ATR atr, String data) {
		this.card = card;
		this.atr = atr;
		this.data = data;
	}

	public NFCWristband(ATR atr) {
		this.card = null;
		this.atr = atr;
		this.data = null;
	}
	
	public static NFCWristband nfcWristbandFromWristbandData(Card card, ATR atr, String jsonString) {
		JSONParser parser=new JSONParser();
		JSONObject guestJSON;
		try {
			guestJSON = (JSONObject) parser.parse(jsonString);
		} catch (ParseException e) {
			return null;
		}
		
		if(guestJSON.containsKey("gid") && guestJSON.containsKey("balance")) {
			long gid = (long) guestJSON.get("gid");		
			//String name = (String) guestJSON.get("guest_name");
			double balance = (double) guestJSON.get("balance");
			Guest g;
			try {
				g = connDB.getGuestFromDB((int) gid);
			} catch (SQLException e) {
				g = new Guest((int)gid, new String("NA - Offline mode"), balance, currentCard, connDB);
			}
			return g;
		}
		return null;
	}

	public String getData() {
		return data;
	}
	
	public boolean equals(NFCWristband otherCard) {
		if(otherCard == null) {
			return false;
		}
		
		if(atr.equals(otherCard.getATR())) {
			return true;
		} else {
			return false;
		}
	}

	public ATR getATR() {
		return atr;
	}

	public Card getCard() {
		// TODO Auto-generated method stub
		return card;
	}

}
